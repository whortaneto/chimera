{
  "name": "chimera-js",
  "version": "0.0.3",
  "description": "Javascript library to facilitate the use of the web workers api.",
  "main": "lib/chimera.js",
  "scripts": {
    "build": "npm run test && webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-preset-es2015": "6.22.0",
    "chai": "3.4.1",
    "eslint": "1.7.2",
    "eslint-loader": "1.6.1",
    "mocha": "2.3.4",
    "webpack": "2.2.1",
    "yargs": "6.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whortaneto/chimera-js.git"
  },
  "keywords": [
    "web-workers",
    "worker",
    "web",
    "javascript",
    "library"
  ],
  "author": "Krasimir Tsonev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whortaneto/chimera-js/issues"
  },
  "homepage": "https://github.com/whortaneto/chimera-js"
}
