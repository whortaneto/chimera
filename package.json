{
  "name": "chimera-js",
  "version": "0.1.9",
  "description": "Javascript library to facilitate the use of the web workers api.",
  "main": "lib/chimera.js",
  "scripts": {
    "just:build": "webpack --env build",
    "build": "npm run test && webpack --env build",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha --compilers js:babel-core/register --colors ./test/*.spec.js",
    "test:watch": "mocha --compilers js:babel-core/register --colors -w ./test/*.spec.js",
    "upgrade:version": "npm version patch && git push && npm publish",
    "version": "npm run just:build && git add ."
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "files": [
    "src/index.js"
  ],
  "devDependencies": {
    "babel": "6.5.2",
    "babel-core": "6.22.1",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.10",
    "babel-plugin-add-module-exports": "0.1.2",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-preset-es2015": "6.22.0",
    "chai": "3.4.1",
    "coveralls": "^2.11.16",
    "cross-env": "^3.1.4",
    "eslint": "1.7.2",
    "eslint-loader": "1.6.1",
    "mocha": "2.3.4",
    "nyc": "^10.1.2",
    "webpack": "2.2.1",
    "yargs": "6.6.0",
    "worker-loader": "^0.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whortaneto/chimera-js.git"
  },
  "keywords": [
    "web-workers",
    "worker",
    "web",
    "javascript",
    "library"
  ],
  "author": "Wagner Horta",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whortaneto/chimera-js/issues"
  },
  "homepage": "https://github.com/whortaneto/chimera-js"
}
